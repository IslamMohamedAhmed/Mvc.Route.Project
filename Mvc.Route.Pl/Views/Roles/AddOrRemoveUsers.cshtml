@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var roleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users from role</h1>

<form asp-action="AddOrRemoveUsers" asp-route-roleId="@roleId" class="viewer">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].IsSelected" class="form-check" />
            <label asp-for="@Model[i].IsSelected"> @Model[i].UserName</label>
        </div>
        <input asp-for="@Model[i].UserId" hidden />
        <input asp-for="@Model[i].UserName" hidden />

    }
    <input type="submit" value="Update" class="btn btnStyl btn-outline-warning" />
    <a asp-action="Update" asp-route-roleId="@roleId" class="btn btnStyl btn-outline-dark">Cancel</a>
</form>

