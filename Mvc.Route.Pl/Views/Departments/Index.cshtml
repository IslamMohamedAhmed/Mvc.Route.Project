@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br/>
<br/>

<a class="btn btn-success" asp-action="Create"><i class="fa-solid fa-plus"></i>
    Add</a>

<br />
<br />
@if(Model.Count()>0){
    <table class="table table-striped table-hover text-center">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(f => f.Code)
                </td>
                <td>
                    @Html.DisplayNameFor(f => f.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(f => f.DateOfCreation)
                </td>
                <td>
                    Details
                </td>
                <td>
                    Update
                </td>
                <td>
                    Delete
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (var depa in Model)
            {
                <tr>
                    <td>@depa.Code</td>
                    <td>@depa.Name</td>
                    <td>@depa.DateOfCreation</td>
                    <td>
                        <a class="btn btn-info" asp-action="Details">
                            <i class="fa-solid fa-eye"></i>
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update">
                            <i class="fa-solid fa-code-pen"></i>
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete">
                            <i class="fa-solid fa-trash"></i>
                            Delete
                        </a>
                    </td>


                </tr>

            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-warning">
        No Departments Available

    </div>
}

