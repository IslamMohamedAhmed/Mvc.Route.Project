@model IEnumerable<DepartmentViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br/>
<br/>


@if (TempData["CreateDepartment"] is not null)
{
    <div class="alert alert-success MessageDiv">@TempData["CreateDepartment"]</div>
}
@if (TempData["EditDepartment"] is not null)
{
    <div class="alert alert-warning MessageDiv">@TempData["EditDepartment"]</div>
}
@if (TempData["DeleteDepartment"] is not null)
{
    <div class="alert alert-danger MessageDiv">@TempData["DeleteDepartment"]</div>
}
<br />
<br />
<a class="btn btnStyl btn-outline-success" asp-action="Create">
    <i class="fa-solid fa-plus"></i>
    Add</a>


<br />
<br />
@if(Model.Count()>0){
    <table class="table table-striped table-hover text-center">
        <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(f => f.Code)
                </td>
                <td>
                    @Html.DisplayNameFor(f => f.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(f => f.DateOfCreation)
                </td>
                <td>
                    Details
                </td>
                <td>
                    Update
                </td>
                <td>
                    Delete
                </td>
            </tr>
        </thead>

        <tbody>
            @foreach (var depa in Model)
            {
                <tr>
                    <td>@depa.Code</td>
                    <td>@depa.Name</td>
                    <td>@depa.DateOfCreation</td>
                    <partial name="DetailsEditDeleteButtonsPartialView" model="@depa.Id.ToString()"></partial>


                </tr>

            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-warning">
        No Departments Available

    </div>
}

