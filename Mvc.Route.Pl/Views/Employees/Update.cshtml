@model EmployeeViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update employee</h1>


<br />
<br />
<form asp-action="Update" enctype="multipart/form-data">

	<partial name="EmployeePartialViews/EmployeeEditAddPartialView" model="@Model"></partial>

	<input hidden asp-for="ImageName"/>
	<input class="btn btnStyl btn-outline-warning" type="submit" value="Save" />
	<a asp-action="Index" class="btn btnStyl btn-outline-dark">Back to List</a>

</form>

@section jQueryValidation {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}