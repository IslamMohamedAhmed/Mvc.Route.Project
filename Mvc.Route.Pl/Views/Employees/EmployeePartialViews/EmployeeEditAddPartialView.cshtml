@model EmployeeViewModel


@{
	var departments = new SelectList(ViewBag.departments, nameof(DepartmentViewModel.Id), nameof(DepartmentViewModel.Name));
}

	<div class="text-danger" asp-validation-summary="All"></div>
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" />
		<br />
		<span class="text-danger" asp-validation-for="Name"></span>
	</div>
	<br />
	<div class="form-group">
		<label asp-for="Age"></label>
		<input asp-for="Age" class="form-control" />
		<br />

		<span class="text-danger" asp-validation-for="Age"></span>
	</div>
	<br />

	<div class="form-group">
		<label asp-for="Address"></label>
		<input asp-for="Address" class="form-control" />
		<br />

		<span class="text-danger" asp-validation-for="Address"></span>
	</div>
	<br />

	<div class="form-group">
		<label asp-for="Salary"></label>
		<input asp-for="Salary" class="form-control" />
		<br />

		<span class="text-danger" asp-validation-for="Salary"></span>
	</div>
	<br />

	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control" />
		<br />

		<span class="text-danger" asp-validation-for="Email"></span>
	</div>
	<br />

	<div class="form-group">
		<label asp-for="PhoneNumber"></label>
		<input asp-for="PhoneNumber" class="form-control" />
		<br />

		<span class="text-danger" asp-validation-for="PhoneNumber"></span>
	</div>
	<br />
	<div class="form-group">
		<label asp-for="IsActive"></label>
		<input asp-for="IsActive" class="form-check" />
		<br />

		
	</div>
	<br />

	<div class="form-group">
		<label asp-for="HiringDate"></label>
		<input asp-for="HiringDate" class="form-control" />
		<br />

		<span class="text-danger" asp-validation-for="HiringDate"></span>
	</div>
	@if(departments is null){
	<select class="form-select" asp-for="DepartmentId">
		<option value="@null">Select Department</option>
	</select>
	}
	else{
	<select class="form-select" asp-items="departments" asp-for="DepartmentId">
		<option value="@null">Select Department</option>
	</select>
	}
	
	<br />

<div class="form-group">
	<label asp-for="Image"></label>
	<input asp-for="Image" class="form-control" />
	<br />


</div>


