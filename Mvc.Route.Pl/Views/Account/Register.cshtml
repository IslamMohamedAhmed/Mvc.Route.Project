@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
	<h1>Creative Register Form</h1>
	<div class="main-agileinfo">
		<div asp-validation-summary="All"></div>
		<div class="agileits-top">
			<form asp-action="Register">
				<div class="mx-auto">
					<input class="text" asp-for="Username" placeholder="Username" required="">
				<br/>
					<input class="text" asp-for="FirstName" placeholder="First Name" required="">
				<br />
					<input class="text" asp-for="LastName" placeholder="Last Name" required="">
				<br />
					<input class="text" asp-for="Email" placeholder="Email" required="">
				<br />
					<input class="text" asp-for="Password" placeholder="Password" required="">
				<br />
					<input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
				<br />
				</div>

				<div class="wthree-text">
					<label class="anim">
						<input type="checkbox" asp-for="IsAgree" class="checkbox" >
						<span>I Agree To The Terms & Conditions</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input class="w-100" type="submit" value="Register">
			</form>
			<p>have an account? <a asp-action="Login"> Login Now!</a></p>
		</div>
	</div>
	<!-- copyright -->
	<div class="colorlibcopy-agile">
		<p>© 2018 Colorlib Signup Form. All rights reserved | Design by <a href="https://colorlib.com/" target="_blank">Colorlib</a></p>
	</div>
	<!-- //copyright -->
	<ul class="colorlib-bubbles">
